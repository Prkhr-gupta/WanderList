<% layout("/layouts/boilerplate") %>
<div id="filters">
    <div class="filter" id="Trending">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter" id="Rooms">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </div>
    <div class="filter" id="Iconic Cities">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
    </div>
    <div class="filter" id="Mountains">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
    </div>
    <div class="filter" id="Castles">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
    </div>
    <div class="filter" id="Amazing Pools">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
    </div>
    <div class="filter" id="Camping">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
    </div>
    <div class="filter" id="Farms">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
    </div>
    <div class="filter" id="Arctic">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>
    <div class="filter" id="Beaches">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beaches</p>
    </div>
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" id="all">
    <%for(let listing of allListings){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card col listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing_image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text"><b><%=listing.title%></b> <br>
                <%=listing.loc%>, <%=listing.country%> <br>
                &#8377;<%=listing.price.toLocaleString("en-IN")%>/night</p>
            </div>
        </div>
        </a>
    <%}%>
</div>
<script src="/js/home.js"></script>